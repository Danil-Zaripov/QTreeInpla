length(r) >< [] => r~0;
length(r) >< x:xs =>
  Eraser~x,
  xs~length(cnt),
  r << Add(cnt, 1);

listZip(r, xs) >< ys =>
  listZipW(r, xs)~ys;

listZipW(r, xs) >< [] => r~[], Eraser~xs;
listZipW(r, xxs) >< y:ys =>
  r~(wx, wy):ws,
  (wx, wy, rys)~w,
  deconsZip(w, xs, ys, y)~xxs,
  listZipW(ws, xs)~rys;

deconsZip(r, rxs, ys, y) >< [] =>
  rxs~[],
  Eraser~ys,
  r~(y, []);
deconsZip(r, rxs, ys, y) >< x:xs =>
  rxs~xs,
  r~(x,y, ys);

